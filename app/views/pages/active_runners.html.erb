<%- model_class = Stat -%>
<div class="page-header">
  <h1>Active Runners</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:place) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:competitions) %></th>
    </tr>
  </thead>
  <tbody>
    <% @stats_active.each_with_index do |(key, value), index| %>
   <tr>
        <td><%= index+1 %></td>
        <td><%= key %></td>
        <td><%= value %></td>
   </tr>
    <% end %>
  </tbody>
</table>

 <% if @stats_active.size<2 %>
    <p> No results  </p>
 <% end %>

<br>

<hr>
