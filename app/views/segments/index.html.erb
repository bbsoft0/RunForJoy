<%- model_class = Segment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:dist) %></th>
      <th><%= model_class.human_attribute_name(:pr) %></th>
      <th><%= model_class.human_attribute_name(:goal) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @segments.each do |segment| %>
      <tr>
        <td><%= link_to segment.id, segment_path(segment) %></td>
        <td><%= segment.name %></td>
        <td><%= segment.dist %></td>
        <td><%= segment.pr %></td>
        <td><%= segment.goal %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_segment_path(segment), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      segment_path(segment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 <% if user_signed_in? %>
 <%=
 link_to t('.new', :default => t("helpers.links.new")),
            new_segment_path,
            :class => 'btn btn-primary' %>
<% else %>
<p> Login or SIgn Up to add new segments </p>
<%end%>
