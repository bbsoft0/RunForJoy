<%= form_for @segment, :html => { :class => "form-horizontal segment" } do |f| %>

  <% if @segment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@segment.errors.count, "error") %> prohibited this segment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @segment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :dist, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :dist, :class => 'form-control' %>
    </div>
    <%=f.error_span(:dist) %>
  </div>
  <div class="form-group">
    <%= f.label :pr, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pr, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pr) %>
  </div>
  <div class="form-group">
    <%= f.label :goal, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :goal, :class => 'form-control' %>
    </div>
    <%=f.error_span(:goal) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                segments_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
