<%- model_class = Segment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @segment.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dist) %>:</strong></dt>
  <dd><%= @segment.dist %></dd>
  <dt><strong><%= model_class.human_attribute_name(:compdate) %>:</strong></dt>
  <dd><%= @segment.compdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goal) %>:</strong></dt>
  <dd><%= @segment.goal %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              segments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_segment_path(@segment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              segment_path(@segment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
