<%= form_for @stat, :html => { :class => "form-horizontal stat" } do |f| %>

  <% if @stat.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@stat.errors.count, "error") %> prohibited this stat from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @stat.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :segment_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :segment_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:segment_id) %>
  </div>
  <div class="form-group">
    <%= f.label :place, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :place, :class => 'form-control' %>
    </div>
    <%=f.error_span(:place) %>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :company, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :company, :class => 'form-control' %>
    </div>
    <%=f.error_span(:company) %>
  </div>
  <div class="form-group">
    <%= f.label :time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:time) %>
  </div>
  <div class="form-group">
    <%= f.label :minkm, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :minkm, :class => 'form-control' %>
    </div>
    <%=f.error_span(:minkm) %>
  </div>
  <div class="form-group">
    <%= f.label :kmh, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :kmh, :class => 'form-control' %>
    </div>
    <%=f.error_span(:kmh) %>
  </div>
  <div class="form-group">
    <%= f.label :stars, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :stars, :class => 'form-control' %>
    </div>
    <%=f.error_span(:stars) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stats_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
